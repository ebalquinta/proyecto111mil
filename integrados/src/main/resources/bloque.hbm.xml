<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping.dtd">

<hibernate-mapping>
  <class name="org.integrados.data.bloques.Bloque" table="bloque" catalog="integrados_db" optimistic-lock="version" >
    <id name="id" type="java.lang.Integer" column="id" >
      <generator class="identity" />
    </id>
    
   <!-- 3 mapeos one to one con bloqueAnd -->
   
    <many-to-one name="BloqueAnd" class="org.integrados.data.bloques.BloqueAnd" fetch="join" not-null="false"> 
        <column name="bloque_and" />
    </many-to-one>
    
    <!--Atributos en bloque -->
    
    <property name="tipoBloque" type="integer" column="tipo_bloque" not-null="true" />
    
  </class>
</hibernate-mapping>
