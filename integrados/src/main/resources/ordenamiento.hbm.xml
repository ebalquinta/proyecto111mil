<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="org.integrados.data.plantillas.Ordenamiento" table="plantilla">
    <id name="id" type="integer" column="id" >
      <generator class="identity" />
    </id>
    <!--pendiente encontrar soluciÃ³n a la lista de soluciones (join table)-->
    <property name="enunciado" type="string" column="enunciado" length="1000"/>
    <property name="imagenEnunciado" type="string" column="imagen_enunciado" length="300"/>
    <property name="sonidoEnunciado" type="string" column="sonido_enunciado" length="300"/>
    <property name="tipoPlantilla" type="integer" column="tipo_plantilla"/>
  </class> 
</hibernate-mapping>
